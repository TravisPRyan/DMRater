<% include partials/header.ejs %>
	

	<div class="container">
		

		<header class="jumbotron">
			<h1>Welcome to DMRater</h1>
			<p>View Peer Reviewed Dungeon Masters</p>
			<p><a class="btn btn-primary btn-lrg" href="/locations/new">Add Location</a></p>
		</header>

		<div class="row">
			<div class="col-lg-12">
				<h3>
					Best Rated Locations
				</h3>
			</div>
		</div>

		<div class="row text-center" style="display:flex; flex-wrap: wrap;">
			<% locations.forEach(function(location){ %>
				<div class="col-md-3 col-sm-6"> 
					<div class="thumbnail">
						<img src="<%= location.image %>">
						<div class="caption">
							<h4><%= location.name %></h4>
						</div>
						<p>
							<a href="/locations/<%= location._id %>" class="btn btn-primary">More Info</a>
						</p>
					</div>
							
				</div>
			<% }); %>
		</div>

		<a href="/">Home</a>
	</div>
<% include partials/footer.ejs %>