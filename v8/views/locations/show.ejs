<% include ../partials/header %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">DMRater</p>
			<div class="list-group">
				<li class="list-group-item active">Item 1</li>
				<li class="list-group-item">Item 2</li>
				<li class="list-group-item">Item 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= location.image %>">
				<div class="caption-full">
					<h4 class="pull-right">$5.00/session</h4>
					<h4><a><%=location.name%></a></h4>
					<p><%= location.description %></p>
					<p>
						<em>Submitted By: <%= location.author.username %></em>
					</p>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/locations/<%= location._id %>/comments/new">Leave a Comment</a>
				</div>
				<hr>
				<% location.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							 <strong><%= comment.author.username %></strong>
							<span class="pull-right">10 days ago</span>
							<p>
								<%= comment.text %>
							</p>
							
						</div>
					</div>
					
				<% }) %>
			</div>
		</div>
	</div>
</div>



<% include ../partials/footer %>