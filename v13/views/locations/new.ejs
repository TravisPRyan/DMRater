<% include ../partials/header.ejs %>


	<div class="row">
		<h1 style="text-align: center">Create a new location</h1>
		<div style="width: 30%; margin: 20px auto;">
			<form action="/locations" method="POST">

				<div class="form-group">
					<input class="form-control" type="text" name="location" placeholder="enter location">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="enter price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="enter img url">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="enter description">
				</div>
				<div class="form-group">
					<button class="btn btn-lrg btn-default btn-primary btn-block">Submit</button>	
				</div>
		</form>
			<a href="/locations">Return to Locations</a>
		</div>
		
	</div>






